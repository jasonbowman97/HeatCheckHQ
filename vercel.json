{
  "framework": "nextjs",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "buildCommand": "next build",
  "git": {
    "deploymentEnabled": {
      "update-homescreen": false
    }
  },
  "crons": [
    {
      "path": "/api/refresh",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/nba/pbp-ingest",
      "schedule": "0 11 * * *"
    }
  ]
}
